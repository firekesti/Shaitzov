<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <!-- This is the color the card will be when selected during multi-select mode-->
            <solid android:color="@color/cappuccino"/>
            <stroke
                android:width="1dp"
                android:color="#999"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/white"/>
            <stroke
                android:width="1dp"
                android:color="#999"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
